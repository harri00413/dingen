---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;

const pubDateFmt = new Date(frontmatter.pubDate).toLocaleDateString("nl-NL", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
});
---

<BaseLayout pageTitle={frontmatter.title}>
  <p>Door {frontmatter.author}</p>
  <!-- <p>Gepubliceerd op: {frontmatter.pubDate.toString().slice(0, 10)}</p> -->
  <p>Gepubliceerd op: {pubDateFmt}</p>
  <div class="grid justify-center">
    <img src={frontmatter.image.url} width="600" alt={frontmatter.image.alt} />
  </div>
  <slot />
</BaseLayout>
